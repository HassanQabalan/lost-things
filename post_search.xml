<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/btn_style"
    android:id="@+id/relative_post1">



    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:id="@+id/imge_user_name1"


        app:civ_border_width="0dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="1"
        />



    <TextView

        android:layout_marginStart="50dp"
        android:layout_marginTop="12dp"
        android:id="@+id/txt_rewerd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_post1"
        android:hint="REWERD "
        android:visibility="gone"/>

    <TextView
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:id="@+id/text_user_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imge_user_name1"


        android:textColorHint="@color/colorAccent"/>

    <TextView
        android:id="@+id/txt_date1"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_toRightOf="@id/imge_user_name1"
        android:hint="DATE_TIME"
        android:textColor="@color/black" />

    <!--<TextView-->
    <!--android:id="@+id/txt_area"-->
    <!--android:layout_marginLeft="80dp"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_toRightOf="@id/text_user_name"-->
    <!--android:hint="Area" />-->

    <TextView
        android:textColor="@color/black"
        android:id="@+id/txt_post1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:hint=""

        />

    <TextView
        android:id="@+id/txt_type_lost1"

        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="204dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/imge_user_name1"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textSize="17dp"

        />

    <TextView
        android:id="@+id/txt_loster_founder1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/imge_user_name1"
        android:hint="loster"
        android:textSize="17dp"
        android:visibility="gone"/>

    <TextView
        android:textColor="@color/black"
        android:layout_marginStart="195dp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/img_post1"
        android:layout_toRightOf="@id/imge_user_name1"
        android:layout_marginLeft="180dp"
        android:hint="LOCATION"
        android:textSize="17dp"
        android:id="@+id/location1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:visibility="gone"/>

    <ImageView
        android:foregroundGravity="center"
        android:id="@+id/img_post1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:focusableInTouchMode="true"
        android:adjustViewBounds="true"
        android:filterTouchesWhenObscured="true"
        android:layout_marginTop="120dp"

        android:src="@drawable/ic_photo_camera_black_24dp"/>

    />

    <Button


        android:background="@color/black"
        android:layout_below="@id/img_post1"

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_below="@id/img_post1"
        android:id="@+id/btn_comment1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginStart="150dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_comment"
        android:height="20dp"
        />




    <Button

        android:id="@+id/black_devide"
        android:background="@color/black"
        android:layout_below="@id/btn_comment1"
        android:layout_marginStart="42dp"
        android:layout_width="275dp"
        android:layout_height="2dp"
        />


</RelativeLayout>
