<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update_post" >
    <LinearLayout
        android:gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button

            android:background="@drawable/buttons"
            android:id="@+id/btn_update_imge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:text="Are you update the image"/>

        <ImageView
            android:id="@+id/image_update"
            android:background="@drawable/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="80dp"
            android:visibility="gone"
            />

        <EditText
            android:layout_marginBottom="20dp"
            android:id="@+id/update_text_post"
            android:layout_width="wrap_content"
            android:hint="Enter new text update "
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"
            />

        <Button
            android:background="@drawable/buttons"
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:text="Update"/>

        <Button
            android:background="@drawable/buttons"
            android:layout_marginTop="20dp"
            android:id="@+id/btn_backto_post2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:text="BACK"/>






    </LinearLayout>

</android.support.constraint.ConstraintLayout>