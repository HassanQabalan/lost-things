<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/btn_style"
    android:id="@+id/relative_post">



    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:id="@+id/imge_user_name"


        app:civ_border_width="0dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="1"
        />

    <Spinner


        android:textColor="@color/colorPrimary"
        android:layout_marginStart="250dp"
        android:layout_toRightOf="@id/imge_user_name"
        android:id="@+id/Spinner_up_Del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/search_type1">

    </Spinner>

    <TextView

        android:layout_marginStart="50dp"
        android:layout_marginTop="12dp"
        android:id="@+id/txt_rewerd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_post"
        android:hint="REWERD "
        android:visibility="gone"/>

    <TextView

        android:textColor="@color/black"
        android:id="@+id/text_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imge_user_name"
        android:layout_marginTop="0dp"
        android:layout_marginStart="15dp"
        android:textColorHint="@color/colorAccent"/>

    <TextView

        android:textColor="@color/black"
        android:layout_marginStart="30dp"

        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imge_user_name"
        android:hint="DATE_TIME" />

    <!--<TextView-->
    <!--android:id="@+id/txt_area"-->
    <!--android:layout_marginLeft="80dp"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_toRightOf="@id/text_user_name"-->
    <!--android:hint="Area" />-->

    <TextView
        android:textColor="@color/black"
        android:id="@+id/txt_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:hint=""

        />

    <TextView
        android:id="@+id/txt_type_lost"

        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="204dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/imge_user_name"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textSize="17dp"

        />

    <TextView
        android:id="@+id/txt_loster_founder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/imge_user_name"
        android:hint="loster"
        android:textSize="17dp"
        android:visibility="gone"/>

    <TextView
        android:textColor="@color/black"
        android:layout_marginStart="195dp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/img_post"
        android:layout_toRightOf="@id/imge_user_name"
        android:layout_marginLeft="180dp"
        android:hint="LOCATION"
        android:textSize="17dp"
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:visibility="gone"/>

    <com.zolad.zoominimageview.ZoomInImageView
        android:foregroundGravity="center"
        android:id="@+id/img_post"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:focusableInTouchMode="true"
        android:adjustViewBounds="true"
        android:filterTouchesWhenObscured="true"
        android:layout_marginTop="120dp"

        android:src="@drawable/ic_photo_camera_black_24dp"/>

    />

    <Button


        android:background="@color/black"
        android:layout_below="@id/img_post"

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_below="@id/img_post"
        android:id="@+id/btn_comment"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginStart="40dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_comment"
        android:height="20dp"
        />

    <Button
        android:layout_below="@id/img_post"
        android:id="@+id/btn_location"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginStart="120dp"
        android:layout_toRightOf="@id/btn_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_location_on_black_24dp"
        android:height="20dp"
        />


    <Button

        android:id="@+id/black_devide"
        android:background="@color/black"
        android:layout_below="@id/btn_comment"
        android:layout_marginStart="42dp"
        android:layout_width="275dp"
        android:layout_height="2dp"
       />


</RelativeLayout>
